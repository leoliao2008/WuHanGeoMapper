<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_light_white_round"
    android:translationZ="@dimen/dimen_translation_z_5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_bg_round"
        android:layout_margin="@dimen/dimen_margin_5dp"
        android:translationZ="@dimen/dimen_translation_z_2dp">


        <android.support.v4.view.ViewPager
            android:id="@+id/map_type_toggle_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/map_type_toggle_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/dimen_text_size_10sp"
            android:text="矢量地图"/>




    </LinearLayout>


</FrameLayout>