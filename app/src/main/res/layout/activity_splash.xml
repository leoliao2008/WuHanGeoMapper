<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skycaster.wuhanmappingapp.Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_splash"/>

    <com.skycaster.wuhanmappingapp.customized.TwinklingTextView
        android:id="@+id/splash_twinkling_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="@dimen/dimen_padding_10dp"
        android:textSize="@dimen/dimen_text_size_25sp"
        android:layout_marginTop="@dimen/dimen_margin_top_100dp"
        android:text="欢迎使用思凯微软件！"/>

    <TextView
        android:id="@+id/splash_tv_ver_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="@dimen/dimen_padding_10dp"
        android:textSize="@dimen/dimen_text_size_15sp"
        android:layout_marginBottom="@dimen/dimen_margin_top_100dp"
        android:text="Ver 1.0"/>

</FrameLayout>
